import java.util.*;
import java.util.stream.Collectors;

class TransactionManager {

    List<Transaction> transactions;

    public TransactionManager() {
        transactions = new ArrayList<>();
    }

    public void addTransaction(Transaction transaction) {
        transactions.add(transaction);
    }

    public List<Transaction> getAllTransactions() {
        return transactions;
    }

    public List<Transaction> getTransactionsByMonth(int year, int month) {
        List<Transaction> result = new ArrayList<>();
        for (Transaction t : transactions) {
            if (t.getDate().getYear() == year &&
                t.getDate().getMonthValue() == month) {
                result.add(t);
            }
        }
        return result;
    }

    public double getTotalIncome(int year, int month) {
        double total = 0;
        for (Transaction t : getTransactionsByMonth(year, month)) {
            if (t.getCategory() == TransactionCategory.PEMASUKAN) {
                total += t.getAmount();
            }
        }
        return total;
    }

    public double getTotalExpense(int year, int month) {
        double total = 0;
        for (Transaction t : getTransactionsByMonth(year, month)) {
            if (t.getCategory() == TransactionCategory.PENGELUARAN) {
                total += t.getAmount();
            }
        }
        return total;
    }
}
